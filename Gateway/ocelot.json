{
  "GlobalConfiguration": {
    "BaseUrl": "https://localhost:7500"
  },
  "Routes": [
    {
      "UpstreamPathTemplate": "/api/auth/login",
      "UpstreamHttpMethod": [ "POST" ],
      "DownstreamPathTemplate": "/auth/login",
      "DownstreamScheme": "https",
      "DangerousAcceptAnyServerCertificateValidator": true,
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 5001
        }
      ]
    },
    {
      "UpstreamPathTemplate": "/api/auth/refresh",
      "UpstreamHttpMethod": [ "POST" ],
      "DownstreamPathTemplate": "/auth/refresh",
      "DownstreamScheme": "https",
      "DangerousAcceptAnyServerCertificateValidator": true,
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 5001
        }
      ]
    },
    {
      "UpstreamPathTemplate": "/api/user/{everything}",
      "UpstreamHttpMethod": [ "POST", "GET" ],
      "DownstreamPathTemplate": "/user/{everything}",
      "DownstreamScheme": "https",
      "DangerousAcceptAnyServerCertificateValidator": true,
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 5001
        }
      ],
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "Bearer"
      }
    },
    {
      "UpstreamPathTemplate": "/api/media/{everything}",
      "UpstreamHttpMethod": [ "POST", "GET" ],
      "DownstreamPathTemplate": "/media/{everything}",
      "DownstreamScheme": "https",
      "DangerousAcceptAnyServerCertificateValidator": true,
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 5001
        }
      ]
    },
    {
      "UpstreamPathTemplate": "/api/admin/{everything}",
      "UpstreamHttpMethod": [ "GET", "POST", "PUT", "DELETE" ],
      "DownstreamPathTemplate": "/admin/{everything}",
      "DownstreamScheme": "https",
      "DangerousAcceptAnyServerCertificateValidator": true,
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 5001
        }
      ],
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "Bearer"
      },
      "RouteClaimsRequirement": {
        "role": "admin"
      }
    }
  ]
}